{% extends "template.njk" %}
{% block content %}

<form action="/birds" method="post">
    <div class="textblock">
        <h2>Add new bird</h2>
            <label for="name">Name:</label>
            <input type="text", id="name", name="name" required><br>

            <label for="species">Species:</label>
            <select name="species", id="species" required>
                {% for option in options %}
                    <option value={{option.speciesID}}>{{option.speciesName}}</option>
                {% endfor %}
            </select> <br>

            <label for="owner">Owner:</label>
            <select name="owner", id="owner" required>
                {% for option in options %}
                    <option value={{option.ownerID}}>{{option.ownerName}}</option>
                {% endfor %}
            </select> <br>

            <label for="wingspan">Wingspan:</label>
            <input type="number", id="wingspan", name="wingspan"><label for="wingspan" required>(cm)</label><br>

            <label for="weight">Weight:</label>
            <input type="number", id="weight", name="weight"><label for="weight" required>(g)</label><br>
        <button type="submit">Send</button>
    </div>
</form>

{% endblock %}